<script>
    function confirmDelete(id_user) {
        Swal.fire({
            title: 'Você tem certeza?',
            text: "Essa ação não pode ser desfeita!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Sim, delete!',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                delete_user(id_user);
            }
        });
    }

    function delete_user(id_user) {
        var csrfToken = document.querySelector("meta[name='csrf-token']").getAttribute("content");

        $.ajax({
            url: "/users/" + id_user,
            type: "DELETE",
            data: {
                authenticity_token: csrfToken
            },
            success: function (data) {
                Swal.fire({
                    icon: 'success',
                    title: data.message,
                    allowOutsideClick: false,
                    allowEscapeKey: false
                }).then(result => {
                    if (result.isConfirmed) {
                        location.reload();
                    }
                });
            },
            error: function(error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Erro ao deletar usuário',
                    text: data.error_message
                });
            }
        });
    }
    // 'Houve um erro ao tentar deletar o usuário. Por favor, tente novamente mais tarde.'
    function edit_user(user_id) {
        var csrfToken = document.querySelector("meta[name='csrf-token']").getAttribute("content");
        $.ajax({
            url: "/users/" + user_id,
            method: "GET",
            dataType: "json",
            success: function(user) {
                // Preencha o modal com os dados do usuário
                $('#user_form_update #id_user_update').val(user.id);
                $('#user_form_update #update_name_user').val(user.name);
                $('#user_form_update #update_email_user').val(user.email);

                // Mostra o modal
                $('#update_user').modal('show');
            },
            error: function() {
                Swal.fire({
                    icon: 'error',
                    title: 'Erro ao buscar os dados do usuário.'
                });
            }
        });
    }

</script>