<button class="btn" data-toggle="modal" data-target="#<%= object.id %>_exampleModalCenter">
  <i class="bi bi-eye-fill"></i>
</button>

<div class="modal fade" id="<%= object.id %>_exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="<%= object.id %>_exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Decrição do Erro</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= object.description %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
</div>