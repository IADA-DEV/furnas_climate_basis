<section class="background-radial-gradient overflow-hidden">

  <div style="height: 100vh;overflow-x: auto;">
    <div style="height: 100vh; padding: 30px 10px 10px 50px">

      <div>
        <div class="card">
          <div class="card-header pb-0" style="display: flex;">
            <h1>Usuários</h1>
            <button class='btn btn-primary btn-block' style="margin-left: auto;margin-bottom: 11px;" data-toggle="modal" data-target="#new_user"> Novo Usuário </button>
          </div>
          <div class="card-body">


          </div>
        </div>
      </div>

      <div>
        <div class="card">
          <div class="card-body">

            <table class="table table-striped table-hover">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Nome</th>
                  <th scope="col">Email</th>
                  <th scope="col">Ação</th>
                  <th scope="col">Admin</th>
                </tr>
              </thead>
              <tbody>
                <%= render 'users' %>
              </tbody>
            </table>

            <div style="display: flex;justify-content: center;">
              <%= will_paginate @users, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
            </div>


          </div>
        </div>


        <%= render 'update_user' %>
        <%= render 'create_user' %>

      </div>
    </div>
  </div>

</section>

<%= render 'action_js' %>