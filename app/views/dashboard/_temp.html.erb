 <div id="<%= id %>"></div>

<script>
    var options = {
        series: [
            {
                name: '<%= name_x.upcase %>',
                data: <%= raw dados %>
            }
        ],
        chart: {
            height: 350,
            type: 'area',
            toolbar: {
                show: false
            }
        },
        colors: ['#77B6EA'],
        dataLabels: {
            enabled: true,
            formatter: function (val) {
                return val + "<%= unidade %>";
            }
        },
        stroke: {
            curve: 'straight'
        },
        title: {
            text: '<%= name_x.upcase %>',
            align: 'left'
        },
        grid: {
            borderColor: '#e7e7e7',
            row: {
                colors: ['#f3f3f3', 'transparent'], // takes an array which will be repeated on columns
                opacity: 0.5
            },
        },
        markers: {
            size: 1
        },
        xaxis: {
            categories: <%= raw time %>,
            title: {
                text: '<%= type %>'
            }
        },
        yaxis: {
            title: {
                text: '<%= name_x.upcase %>'
            },
            min: <%= (dados.min || 0) - 20 %>,
            max: <%= (dados.max || 0) + 30 %>,
            labels: {
                show: false,
                formatter: function (val) {
                    return val + "<%= unidade %>";
                }
            }
        },
        legend: {
            position: 'top',
            horizontalAlign: 'right',
            floating: true,
            offsetY: -25,
            offsetX: -5
        }
    };

    var chart = new ApexCharts(document.querySelector("#<%= id %>"), options);
    chart.render();
</script>