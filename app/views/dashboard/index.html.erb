<%= javascript_include_tag 'apex_chats' %>

<section class="background-radial-gradient overflow-hidden">
  <div class="row" style="height: 100vh;overflow-x: auto;">
    <div class="row" style="height: 100vh; padding: 30px 10px 10px 50px">

      <div class="container-fluid">
        <div class="row">

          <%#= render 'cads' %>

          <div class="col-md-12" style="text-align: center;margin-top: 50px">
            <div class="col-md-3" style="margin: 0 auto;">
              <%= select_tag 'opcoes_select',
                             options_for_select(@cidade.collect { |opcao| [opcao, opcao] }, ['GOIANIA']),
                             { include_blank: 'Selecione uma opção',
                               class: 'select2 form-control' } %>
            </div>
          </div>

          <div class="row mt-3">
            <div class="col-sm-12 col-xl-12 box-col-12">
              <div class="card">
                <div class="card-body">

                  <table class="table table-striped table-hover table-sm">
                    <thead class="thead-dark">
                    <tr>
                      <th scope="col">Data da Medição</th>
                      <th scope="col">Hora (UTC)</th>
                      <th scope="col">Radiacao (KJ/m¬≤)</th>
                      <th scope="col">Chuva (mm)</th>
                      <th scope="col">Dir. Vento (m/s)</th>
                      <th scope="col">Vel. Vento (m/s)</th>
                      <th scope="col">Raj. Vento (m/s)</th>
                      <th scope="col">Pressao Ins. (hPa)</th>
                      <th scope="col">Pto Orvalho Ins. (C)</th>
                      <th scope="col">Temp. Ins. (C)</th>
                      <th scope="col">Umi. Ins. (%)</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% @inmet_weather_data.each do |weather_datum| %>
                      <tr>
                        <td><%= weather_datum.dta_medicao.to_date_b %></td>
                        <td><%= weather_datum.hr_medicao.to_time_br %></td>
                        <td><%= weather_datum.rad_glo %></td>
                        <td><%= weather_datum.chuva %></td>
                        <td><%= weather_datum.ven_dir %></td>
                        <td><%= weather_datum.ven_vel %></td>
                        <td><%= weather_datum.ven_raj %></td>
                        <td><%= weather_datum.pre_ins %></td>
                        <td><%= weather_datum.pto_ins %></td>
                        <td><%= weather_datum.tem_ins %></td>
                        <td><%= weather_datum.umd_ins %></td>
                      </tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <%= render partial: 'temp', locals: { dados: @tem_ins, time: @time, id: 'temperatura' } %>
            <%= render partial: 'temp', locals: { dados: @umd_ins, time: @time, id: 'humidade' } %>
            <%= render partial: 'temp', locals: { dados: @rad_glo, time: @time, id: 'radiacao' } %>
            <%= render partial: 'temp', locals: { dados: @ven_vel, time: @time, id: 'vento' } %>
            <%= render partial: 'temp', locals: { dados: @chuva, time: @time, id: 'chuva' } %>
            <%= render partial: 'temp', locals: { dados: @pre_ins, time: @time, id: 'Pressão' } %>

            <%= render partial: 'geral' %>


          </div>

        </div>
      </div>

    </div>
  </div>

</section>



<script>
    window.addEventListener('DOMContentLoaded', () => {
        $('.select2').select2();
    })
</script>



