  <header>
    <div class="image-text">
            <span class="image">
        <!--<img src="logo.png" alt="">-->
      </span>

      <div class="text logo-text">
        <span class="name"><%= current_user.name %></span>
        <span class="profession">New Edge</span>
      </div>
    </div>

    <i class="bi bi-layout-sidebar-inset-reverse icon toggle"></i>

  </header>

  <div class="menu-bar">
    <div class="menu">

      <ul class="menu-links" style="padding: 0;">
        <li class="nav-link">
          <%= link_to root_path do  %>
            <i class="bi bi-stack icon"></i>
            <span class="text nav-text">Dashboard</span>
          <% end %>
        </li>

        <li class="nav-link">
          <a href="#" class='menu_station'>
            <i class="bi bi-boxes icon"></i>
            <span class="text nav-text">Estações Met.</span>
            <i class="bi bi-caret-down-fill icon"></i>
          </a>
        </li>

        <div class='desable' style="padding-left: 40px;" id='sub_menu_station'>
          <li class="nav-link">
            <%= link_to inmet_weather_stations_path, style:'padding-left: 10px;' do  %>
              <span class="text nav-text">INMET</span>
            <% end %>
          </li>

<!--          <li class="nav-link" >-->
            <%#= link_to noa_weather_stations_path, style:'padding-left: 10px;' do  %>
<!--              <span class="text nav-text">NOA</span>-->
            <%# end %>
<!--          </li>-->
        </div>

         <li class="nav-link">
          <a href="#" class='menu_data'>
            <i class="bi bi-stack icon"></i>
            <span class="text nav-text">Dados Met.</span>
            <i class="bi bi-caret-down-fill icon"></i>
          </a>
        </li>

        <div class='desable' style="padding-left: 40px;" id='sub_menu_data'>
          <li class="nav-link">
            <%= link_to inmet_weather_data_path, style:'padding-left: 10px;' do  %>
              <span class="text nav-text">INMET</span>
            <% end %>
          </li>

<!--          <li class="nav-link" >-->
            <%#= link_to noa_weather_stations_path, style:'padding-left: 10px;' do  %>
<!--              <span class="text nav-text">NOA</span>-->
            <%# end %>
<!--          </li>-->
        </div>


        <li class="nav-link" >
          <%= link_to sidekiq_web_path, target:"_blank" do  %>
            <i class="bi bi-diagram-3-fill icon"></i>
            <span class="text nav-text">Processos</span>
          <% end %>
        </li>

      </ul>
    </div>

    <div class="bottom-content">
      <li>
        <%= link_to destroy_user_session_path do %>
          <i class="bi bi-box-arrow-left icon"></i>
          <span class="text nav-text">Sair</span>
        <% end %>
      </li>
    </div>
  </div>

</nav>


<script>
    const body = document.querySelector('body'),
        sidebar = body.querySelector('nav'),
        toggle = body.querySelector(".toggle");


    toggle.addEventListener("click", () => {
        sidebar.classList.toggle("close");
    })

    function toggleMenu(menuElement, targetId) {
      var targetElement = document.getElementById(targetId);
      menuElement.addEventListener('click', function() {
        targetElement.classList.toggle('active');
        targetElement.classList.toggle('desable');
      });
    }

    // Exemplo de uso da função para o menu "Estações Met."
    var estacoesMet = document.querySelector('.menu_station');
    toggleMenu(estacoesMet, 'sub_menu_station');

    var estacoesMet = document.querySelector('.menu_data');
    toggleMenu(estacoesMet, 'sub_menu_data');
</script>
